---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Header from '../components/Header/Header.vue';
import HeadCommon from '../components/HeadCommon.astro';
import HeadSEO from '../components/HeadSEO.astro';
import { SITE } from '../config';
import {sortPosts} from '../util'
import Footer from '../components/Footer.astro';

const posts = await Astro.glob('./posts/*.md');
const allPosts = sortPosts(posts);
---

<Layout title="王小博博">

	<head>
    <HeadCommon />
    <HeadSEO pageURL={SITE.homePage} content={{}} />
    <title>{SITE.title}</title>
  </head>

	<body>
    <Header />
    <div
      class="md:px-0 px-3 box-border mx-auto transition-all -mt-5 mb-12 md:box-border box-content w-full max-w-xl md:max-w-2xl xl:max-w-88rem lg:max-w-5xl"
    >
      <div
        class="grid xl:grid-cols-4 lg:grid-cols-3 md:grid-cols-2 mx-0 md:-mr-5 mr-0"
      >
        {allPosts.map((p) => <Card post={p} />)}
      </div>
    </div>
    <Footer/>
  </body>
</Layout>


