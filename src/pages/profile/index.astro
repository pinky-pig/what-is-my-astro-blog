---
import Header from '../../components/Header/Header.vue'
import HeadCommon from '../../components/HeadCommon.astro'
import HeadSEO from '../../components/HeadSEO.astro'
import { SITE } from '../../config'
import Footer from '../../components/Footer.astro'
import Profile from './profile.md'
---

<html lang="ch">
  <head>
    <HeadCommon />
    <HeadSEO pageURL={SITE.homePage} content={{}} />
    <title>{SITE.title}</title>
  </head>

  <body>
    <Header />
    <div class="mx-auto transition-all -mt-5 mb-12 md:box-border box-content px-3 w-full max-w-xl md:max-w-2xl xl:max-w-88rem lg:max-w-5xl">
      <div class="w-full p-8 mt-20px border-solid border border-black mx-0 md:-mr-5 mr-0">
        <Profile />
      </div>
    </div>
    <Footer />
  </body>
</html>
