---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import Header from '../../components/Header/Header.vue';
import HeadCommon from '../../components/HeadCommon.astro';
import HeadSEO from '../../components/HeadSEO.astro';
import { SITE } from '../../config';
import {sortPosts} from '../../util'
import Footer from '../../components/Footer.astro';

const posts = await Astro.glob('./*.md');
const allPosts = sortPosts(posts);
---

<Layout title="王小博博">

	<head>
    <HeadCommon />
    <HeadSEO pageURL={SITE.profilePage} content={{}} />
    <title>{SITE.title}</title>
  </head>

	<body>
    <Header />
    <div
      class="mx-auto transition-all -mt-5 mb-12 md:box-border box-content px-3 w-full max-w-xl md:max-w-2xl xl:max-w-7xl lg:max-w-5xl"
    >
      <div
        class="grid xl:grid-cols-4 lg:grid-cols-3 md:grid-cols-2 mx-0 md:-mr-5 mr-0"
      >
        {allPosts.map((p) => <Card post={p} />)}
      </div>
    </div>
    <Footer/>
  </body>
	
		<!-- <Card
			href="https://docs.astro.build/"
			title="Documentation"
			body="Learn how Astro works and explore the official API docs."
		/> -->
</Layout>


